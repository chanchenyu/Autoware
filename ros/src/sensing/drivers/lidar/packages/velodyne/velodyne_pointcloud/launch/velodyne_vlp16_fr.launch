<!-- -*- mode: XML -*- -->
<!-- run velodyne_pointcloud/CloudNodelet in a nodelet manager for an VLP-16

arg: calibration = path to calibration file (default: standard VLP16db.yaml)
pcap = path to packet capture file (default: use real device)

$Id$
-->

<launch>
  <group ns="lidar2" >
    <!-- declare arguments with default values -->
    <arg name="parent_frame_id" default="velodyne" />
    <arg name="frame_id" default="velodyne_fr" />
    <arg name="pcap" default="" />
    <arg name="manager" default="$(arg frame_id)_nodelet_manager" />
    <arg name="device_ip" default="192.168.1.202" />
    <arg name="port" default="2370" />
    <arg name="calibration" default="$(find velodyne_pointcloud)/params/VLP16db_fr.yaml"/>
    <arg name="min_range" default="0.4" />
    <arg name="max_range" default="130.0" />
    <arg name="model" default="VLP16"/>
    <arg name="topic_name" default="points_raw"/>
  
  
    <!-- start nodelet manager and driver nodelets -->
    <include file="$(find velodyne_driver)/launch/nodelet_manager.launch">
      <arg name="frame_id" value="$(arg frame_id)" />
      <arg name="device_ip" value="$(arg device_ip)" />
      <arg name="port" value="$(arg port)" />
      <arg name="model" value="$(arg model)"/>
      <arg name="pcap" value="$(arg pcap)"/>
    </include>

    <!-- start cloud nodelet -->
    <node pkg="nodelet" type="nodelet" name="cloud_nodelet"
          args="load velodyne_pointcloud/CloudNodelet $(arg manager)">
      <param name="calibration" value="$(arg calibration)"/>
      <param name="min_range" value="$(arg min_range)"/>
      <param name="max_range" value="$(arg max_range)"/>
      <remap from="velodyne_points" to="$(arg topic_name)"/>
    </node>

    <!-- static tf -->    
    <node pkg="tf" type="static_transform_publisher" name="localizer_rc_to_localizer_fr" args="0.0122072   -0.628534 0.000169907  3.07482 -3.14072  3.13788 $(arg parent_frame_id) $(arg frame_id) 10" />
    <!--<node pkg="tf" type="static_transform_publisher" name="localizer_rc_to_localizer_fr" args="12 1.275 1 0 0 0 $(arg parent_frame_id) $(arg frame_id) 10" />-->
  </group>  
</launch>
