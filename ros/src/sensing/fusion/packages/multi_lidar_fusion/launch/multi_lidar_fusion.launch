<launch>
    <arg name="points_parent_src" default="/lidar0/points_raw" />
    <arg name="points_child_src1" default="/lidar1/points_raw" />
    <arg name="points_child_src2" default="/lidar2/points_raw" />
    
    <node pkg="multi_lidar_fusion" type="multi_lidar_fusion" name="lidar_fuser" output="log">
        <param name="points_parent_src" value="$(arg points_parent_src)" />
        <param name="points_child_src1" value="$(arg points_child_src1)" />
        <param name="points_child_src2" value="$(arg points_child_src2)" />
    </node>

</launch>
